<div class="edit">
　　<h1>Editing Book</h1>
　　<div class="new">
　<%= form_for(@book) do |f| %>
　　<% if @book.errors.any? %>
    　<div class="error_message">
        <div class="error_explanation">
            　<h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        　<ul>
            　<% @book.errors.full_messages.each do |message| %>
            　<li><%= message %></li>
            　<% end %>
        　</ul>
        </div>
    　</div>
　　<% end %>
    　　　<div class="new-book">
        　　　<%= f.label :title %><br>
        　　　<%= f.text_field :title %>
    　　　</div>
    　　　<div class="new-book">
    	　　　<%= f.label :body %><br>
        　　　<%= f.text_area :body %>
    　　　</div>
    　　　<div class="btn">
    	　　　<%= f.submit 'Update Book' %>
    　　　</div>
　<% end %>
</div>

<div class="edit_link">
<%= link_to "show", book_path(@book) %>
<span> | </span>
<%= link_to "Back", books_path %>
</div>
</div>