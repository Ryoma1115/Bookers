<div class="index">
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
	    <tr>
			<td>
		        <%= book.title %>
			</td>
			<td>
		        <%= book.body %>
			</td>
			<td>
				<%= link_to "Show", book_path(book) %>
			</td>
			<td>
				<%= link_to "Edit", edit_book_path(book) %>
			</td>
			<td>
				<%= link_to "Destroy", book_path(book),method: :delete, "data-confirm" => "Are you sure？" %>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>

<h2>New book</h2>
<div class="new">
<%= form_for(@book) do |f| %>
　　<% if @book.errors.any? %>
    　<div class="error_message">
        <div class="error_explanation">
            　<h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        　<ul>
            　<% @book.errors.full_messages.each do |message| %>
            　<li><%= message %></li>
            　<% end %>
        　</ul>
        </div>
    　</div>
　　<% end %>
    <div class="new-book">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="new-book">
    	<%= f.label :body %><br>
        <%= f.text_area :body %>
    </div>
    <div class="btn">
    	<%= f.submit 'Create Book' %>
    </div>
<% end %>
</div>